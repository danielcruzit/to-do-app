<li id="task-<%= task.id %>">
    <% if task.completed %>
    <p style="text-decoration: line-through;">
    <% else %>
    <p>
    <% end %>

    <span class="description"><strong>description </strong>
        <%= task.description %>
        </span>
        <span class="completed"><strong>| completed </strong>
            <%= task.completed %>
        </span>
        <span class="tools-task">
            <button><%= link_to "Edit", edit_task_path(task) %></button>
            <button><%= link_to "Change state",edit_task_path(task) %></button>
            <%= button_to "delete", task, method: :delete,
                                         data: { confirm: "You sure you want to delete this task?" },remote: true %>
        </span>
    </p>
</li>